.unit{
    width:100%;
    height:100%;
    margin-bottom:20px;
}
.unit .unit_title{
    // padding-left:20px;
    padding-top:20px;
}
.unit .unit_title span{
    height:43px;
    width:1597px;
    background: #EBF2FE;
    border:1px solid #BBBBBB;
    display: block;
    text-align:center;
    color:#000000;
    font-size:18px;
    line-height:43px;
}
.step-container{
    padding:30px 0 20px;
}
.step-container .step2{
    width:198px;
}
.title{
    margin-bottom: 20px;
}
.unit_content{
    width:1597px;
    height:59px;
    border-left:1px solid #BBBBBB;
    border-right: 1px solid #BBBBBB;
    border-bottom: 1px solid #BBBBBB;
}
.unit_content .unit_content_left{
    width:797px;
    height:59px;
    float: left;
}
.unit_content .no_line{
    border-right:none;
}
.unit_content .unit_s_left{
    width:199px;
    font-size:14px;
    color:#000000;
    height:58px;
    line-height:59px;
    text-align:center;
    border-right: 1px solid #BBBBBB;
    float: left;
    background:#E9EAEF;
}
.unit_content .unit_s_right{
    width:598px;
    height:59px;
    line-height:59px;
    font-size:14px;
    color:#000000;
    text-align:center;
    border-right: 1px solid #BBBBBB;
    float: left;
}