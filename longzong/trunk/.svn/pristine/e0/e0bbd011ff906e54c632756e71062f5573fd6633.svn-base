.plant-content{
    background: #fff;
    padding:0 20px;
}
.plant-form label{
    display: inline-block;
}
.plant-form input{
    width: 200px;
}
.plant-form .ivu-select-selection{
    border: 1px solid #dddee1;
    border-radius: 4px;
}
.plant-title{
    background: #2d8cf0;
    color: #fff;
    line-height: 50px;
    font-size: 1.1em;
    text-align: center;
}
.text-align-center{
    text-align: center;
}
.title-color{
    background: #ebf2fe;
}
.gray-color{
    background: #b0bbf0;
}
.border-left{
    border-left: 1px solid #d3d7dd;
    border-bottom: 1px solid #d3d7dd;
    border-right:1px solid #d3d7dd;
}
.border-right{
    border-bottom: 1px solid #d3d7dd;
    border-right: 1px solid #d3d7dd;
}
.sliver-color{
    background: #e9eaef;
}
.height-50{
    height: 50px;
    line-height: 50px;
}
//taskplantDetail.vue
.unit{
    width:100%;
    height:100%;
    margin-bottom:20px;
}
.unit .unit_title{
    // padding-left:20px;
    padding-top:20px;
}
.unit .unit_title span{
    height:43px;
    width:100%;
    background: #EBF2FE;
    border:1px solid #BBBBBB;
    display: block;
    text-align:center;
    color:#000000;
    font-size:18px;
    line-height:43px;
}
.step-container{
    padding:30px 0 20px;
}
.step-container .step2{
    width:198px;
}
.title{
    margin-bottom: 20px;
}
.unit_content{
    height:59px;
    border-left:1px solid #BBBBBB;
    border-right: 1px solid #BBBBBB;
    border-bottom: 1px solid #BBBBBB;
}
.unit_content .unit_content_left{
    height:59px;
    float: left;
    width: 50%;
}
.unit_content .no_line{
    border-right:none;
}
.unit_content .unit_s_left{
    font-size:14px;
    width: 30%;
    color:#000000;
    height:58px;
    line-height:59px;
    text-align:center;
    border-right: 1px solid #BBBBBB;
    float: left;
    background:#E9EAEF;
}
.unit_content .unit_s_right{
    width: 70%;
    height:59px;
    line-height:59px;
    font-size:14px;
    color:#000000;
    text-align:center;
    border-right: 1px solid #BBBBBB;
    float: left;
}
.unit_content .no-right-border{
    border-right: 0;
}
.font-size1{
    font-size: 16px;color: #000;
}
.margin-right20{
    margin-right:20px; 
}
.margin-right10{
    margin-right:10px; 
}
.margin-top20{
    margin-top: 20px;
}
.width-px200{
    width: 206px;
}